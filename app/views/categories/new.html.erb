<h1 class="text-center mt-4">Create a new category</h1>

<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @category%>
            <%= form_with(model: @category,class: "shadow p-3 mb-3 bg-info rounded", local: true)  do |f| %>
                <div class="mb-3 row">
                    <%= f.label :name, "Categoory name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "enter a name" %>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="text-center">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                    
                </div>
            <% end %>
        </div>
        <div class="text-center mb-3">
            <%= link_to '[Cancel And return to articles listing]', articles_path,class: "text-info text-decoration-none" %>
        </div>
        
    </div>
</div>